<Window x:Class="SimpleMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:SimpleMVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" d:DataContext="{d:DesignInstance vms:MainViewModel}">
    <Grid>
        <DataGrid x:Name="grd" ItemsSource="{Binding People}" IsReadOnly="True">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ShowPersonCommand}" CommandParameter="{Binding ElementName=grd, Path=SelectedItem}"></MouseBinding>
            </DataGrid.InputBindings>
        </DataGrid>
    </Grid>
</Window>
